# Force directory index
DirectoryIndex index.html index.php

# Block access to dotfiles (like .git, .env)
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to sensitive directories
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Block vendor directory
    RewriteRule ^vendor/.*$ - [F,L]
    
    # Block private_data directory  
    RewriteRule ^private_data/.*$ - [F,L]
    
    # Block admin directory from non-authenticated access (optional)
    # RewriteRule ^admin/.*$ - [F,L]
</IfModule>

# Allow access to download files
<FilesMatch "\.(zip|pdf)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Ensure PHP files can execute
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>
